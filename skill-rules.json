{
  "$schema": "https://code.claude.com/schemas/skill-rules.json",
  "version": "1.0.0",
  "rules": [
    {
      "id": "usage-observer-auto-trigger",
      "name": "Usage Observer Auto Trigger",
      "description": "当用户提到错误、问题等关键词时自动触发 usage-observer",
      "skill": "usage-analytics:usage-observer",
      "trigger": {
        "type": "keyword",
        "keywords": [
          "错误", "失败", "问题", "报错", "不对", "错了", "有问题",
          "超时", "无法", "不能", "异常", "崩溃", "卡住", "慢",
          "error", "exception", "bug", "failed", "fail", "wrong",
          "issue", "crash", "timeout", "broken", "not working",
          "doesn't work", "isn't working"
        ],
        "match": "any",
        "caseSensitive": false
      },
      "context": {
        "hook": "UserPromptSubmit",
        "priority": 100
      },
      "action": {
        "type": "invoke",
        "params": {
          "auto_triggered": true
        }
      }
    },
    {
      "id": "usage-recorder-manual-trigger",
      "name": "Usage Recorder Manual Trigger",
      "description": "当用户主动要求记录问题时触发 usage-recorder",
      "skill": "usage-analytics:usage-recorder",
      "trigger": {
        "type": "keyword",
        "keywords": [
          "记录这个问题",
          "记录一下",
          "保存问题",
          "跟踪问题",
          "记录到跟踪表",
          "record this issue",
          "log this problem",
          "track this issue"
        ],
        "match": "any",
        "caseSensitive": false
      },
      "context": {
        "hook": "UserPromptSubmit",
        "priority": 90
      },
      "action": {
        "type": "invoke",
        "params": {}
      }
    },
    {
      "id": "usage-analyst-analysis-trigger",
      "name": "Usage Analyst Analysis Trigger",
      "description": "当用户要求分析使用数据时触发 usage-analyst",
      "skill": "usage-analytics:usage-analyst",
      "trigger": {
        "type": "keyword",
        "keywords": [
          "分析使用情况",
          "生成报告",
          "查看统计",
          "分析数据",
          "使用分析",
          "analyze usage",
          "generate report",
          "view statistics",
          "usage analysis",
          "show analytics"
        ],
        "match": "any",
        "caseSensitive": false
      },
      "context": {
        "hook": "UserPromptSubmit",
        "priority": 80
      },
      "action": {
        "type": "invoke",
        "params": {}
      }
    },
    {
      "id": "usage-coach-coaching-trigger",
      "name": "Usage Coach Coaching Trigger",
      "description": "当用户寻求改进建议时触发 usage-coach",
      "skill": "usage-analytics:usage-coach",
      "trigger": {
        "type": "keyword",
        "keywords": [
          "改进建议",
          "优化建议",
          "如何改进",
          "最佳实践",
          "培训方案",
          "头脑风暴",
          "improvement suggestions",
          "optimization tips",
          "best practices",
          "training plan",
          "brainstorm"
        ],
        "match": "any",
        "caseSensitive": false
      },
      "context": {
        "hook": "UserPromptSubmit",
        "priority": 70
      },
      "action": {
        "type": "invoke",
        "params": {}
      }
    }
  ]
}
